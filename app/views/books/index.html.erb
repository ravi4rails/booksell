<div class="col-lg-12 mt-5 mb-5">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Author</th>
        <th>Category</th>
      </tr>
    <thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price_with_currency_sign %></td>
          <td><%= book.author %></td>
          <td><%= book.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>
