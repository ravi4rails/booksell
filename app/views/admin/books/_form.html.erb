<%= form_with model: [:admin, book], html: { data: {turbo: false} } do |form| %>
  
  <% if book.errors.any? %>
    <h2>Please fix the errors below</h2>
    <% book.errors.full_messages.each do |message| %>
      <p class="lead text-danger fw-bold"><%= message %></p>
    <% end %>
  <% end %>
  
  <div class="form-group mt-3">
    <%= form.label :name, class: 'mb-2' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group mt-3">
    <%= form.label :price, class: 'mb-2' %>
    <%= form.number_field :price, class: 'form-control', min: '1', step: 'any' %>
  </div>
  
  <div class="form-group mt-3">
    <%= form.label :author, class: 'mb-2' %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>
  
  <div class="form-group mt-3">
    <%= form.label :category, class: 'mb-2' %>
    <%= form.text_field :category, class: 'form-control' %>
  </div>
  
  <div class="form-group mt-3">
    <%= form.label :buy_link, class: 'mb-2' %>
    <%= form.text_field :buy_link, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-success' %>
    <%= link_to 'Cancel', admin_books_path, class: 'btn btn-primary' %>
  </div>

<% end %>